{
  "name": "rokka-render",
  "version": "0.9.0",
  "description": "JavaScript client library for just some render functions of rokka.io",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.min.js",
  "jsdelivr": "dist/index.umd.min.js",
  "files": [
    "/dist/*",
    "/src/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "npm run lint && npm run jest",
    "lint": "eslint '{src,tests,docs}/**/*.{js,ts}'",
    "lint:fix": "eslint '{src,tests,docs}/**/*.{js,ts}'  --fix",
    "jest": "jest",
    "compile": "rm -rf ./dist && rollup -c",
    "watch": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokka-io/rokka.js.git"
  },
  "keywords": [
    "rokka",
    "client",
    "browser",
    "node.js"
  ],
  "author": "rokka <rokka@rokka.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rokka-io/rokka-render.js/issues"
  },
  "homepage": "https://github.com/rokka-io/rokka-render.js#readme",
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/btoa": "^1.2.3",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rollup": "^2.73.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "overrides": {
    "dox": "0.9.1"
  }
}
